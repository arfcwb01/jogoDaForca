<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.JogoDaForca" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/gren</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/yellow</item>

    </style>

    <style name="Theme.JogoDaForca" parent="Base.Theme.JogoDaForca">

        <item name="colorAccent">@color/red</item>
        <item name="android:fontFamily">@font/fonte_pirata_family</item>
        <item name="colorButtonNormal">@color/red</item>
        <item name="backgroundColor">@color/red</item>
        <item name="background">@color/red</item>


    </style>

    <style name="CustonFontSyle" parent="@style/Widget.AppCompat.TextView">
        <item name="fontFamily">@font/fonte_pirata_family</item>
        <item name="android:textSize">@dimen/textview_title</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="CustonButtonSyle" parent="@style/Widget.AppCompat.Button">
        <item name="fontFamily">@font/fonte_pirata_family</item>
        <item name="android:textSize">@dimen/textview_title</item>
        <item name="android:textAlignment">center</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:padding">16dp</item>
    </style>


</resources>